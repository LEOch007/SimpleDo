<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_green"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/gouxuanno"
        android:id="@+id/finishicon"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingLeft="5dp"
            android:text="标签:"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp" />

        <RadioGroup
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/updatelabel"
            android:orientation="horizontal"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/updatelabelworking"
                android:text="工作"
                android:textSize="22sp"
                android:checked="true"
                android:gravity="center"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/updatelabelstudying"
                android:text="学习"
                android:textSize="22sp"
                android:gravity="center"
                />

            <RadioButton
                android:id="@+id/updatelabelliving"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="22sp"
                android:text="生活" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/updatestarttime"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:text="开始日期:"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp"
            android:gravity="end|center"
            />

        <TextView
            android:id="@+id/updatestarttimeshow"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="22sp"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingLeft="5dp"
            android:text="结束日期:"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp"
            android:id="@+id/updatefinishtime"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="22sp"
            android:id="@+id/updatefinishtimeshow"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:gravity="end|center"
            android:paddingLeft="5dp"
            android:text="任务内容:"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp"  />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/updatecontnet"
            />
    </LinearLayout>

    <Button
        android:id="@+id/updatesubmit"
        android:background="@drawable/btnshape"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:width="100dp"
        android:text="更新"
        android:textColor="@color/white"
        android:textSize="22sp"
        />

</LinearLayout>