<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bianqian1"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="标签:"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <RadioGroup
            android:id="@+id/radiolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/labelworking"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:checked="true"
                android:gravity="center"
                android:text="工作"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/labelstudying"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="学习" />

            <RadioButton
                android:id="@+id/labelliving"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="生活" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/buttonsubmit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="15dp"
            android:background="@color/transparent"
            android:src="@mipmap/pen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="34dp"
            android:gravity="center"
            android:text="内容:"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editcontnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/starttime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="开始日期:"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/starttimeshow"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/finishtime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="结束日期:"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/finishtimeshow"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>