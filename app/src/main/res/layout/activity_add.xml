<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="选择标签:"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:paddingLeft="10sp"
            />

        <RadioGroup
            android:id="@+id/radiolabel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/labelworking"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:checked="true"
                android:gravity="center"
                android:text="working" />

            <RadioButton
                android:id="@+id/labelstudying"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="studying" />

            <RadioButton
                android:id="@+id/labelliving"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="living" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="填写内容:"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editcontnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="470px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="开始日期:"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:id="@+id/starttime"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/starttimeshow"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="结束日期:"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:id="@+id/finishtime"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/finishtimeshow"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/buttonsubmit"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:width="200dp"
        />

</LinearLayout>